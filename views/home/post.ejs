<div class="content-post-creat">
  <div class="content-post-creat-text">
    <a href="/user/<%= user._id %>">
      <img src="<%= user.avatar %>" alt="" />
    </a>
    <div data-bs-toggle="modal" data-bs-target="#exampleModal">
      <span
        ><%= user.fullname.split(' ')[user.fullname.split(' ').length - 1] %>
        ơi, bạn đang nghĩ gì thế ?</span
      >
    </div>
  </div>
  <div class="content-post-creat-image" data-bs-toggle="modal" data-bs-target="#exampleModal2">
    <div class="content-post-creat-upload">
      <i class="fas fa-images"></i> Ảnh/Video
    </div>
    <div class="content-post-creat-upload">
      <i class="far fa-laugh-beam"></i> Cảm xúc/Hoạt động
    </div>
  </div>
</div>

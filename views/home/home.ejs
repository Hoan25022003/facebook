<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Facebook Moon</title>
    <link
      rel="icon"
      href="../public/img/Logo Facebook.png"
      type="image/x-icon"
    />
    <link rel="stylesheet" href="/public/css/base.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/css/home.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <%- include('../components/header') %>
    <main>
      <div class="content">
        <div class="content-category">
          <ul class="content-category-list">
            <li>
              <a href="/user/<%= user._id %>" class="content-category-item">
                <img src="<%= user.avatar %>" alt="" />
                <%= user.fullname %>
              </a>
            </li>
            <li>
              <a href="" class="content-category-item">
                <img
                  src="https://static.xx.fbcdn.net/rsrc.php/v3/yx/r/-XF4FQcre_i.png"
                  alt=""
                />
                Bạn bè
              </a>
            </li>
            <li>
              <a href="" class="content-category-item">
                <img
                  src="https://static.xx.fbcdn.net/rsrc.php/v3/yr/r/2uPlV4oORjU.png"
                  alt=""
                />
                Đã lưu
              </a>
            </li>
            <li>
              <a href="" class="content-category-item">
                <img
                  src="https://static.xx.fbcdn.net/rsrc.php/v3/yD/r/mk4dH3FK0jT.png"
                  alt=""
                />
                Nhóm
              </a>
            </li>
            <li>
              <a href="" class="content-category-item">
                <img
                  src="https://static.xx.fbcdn.net/rsrc.php/v3/yG/r/A1HlI2LVo58.png"
                  alt=""
                />
                Watch
              </a>
            </li>
          </ul>
        </div>
        <div class="content-post">
          <%- include('./post') %>
        </div>
        <div class="content-friend">
          <ul class="content-friend-list">
            <h3>Người liên hệ</h3>
            <% listUser.forEach(user => { %>
              <li>
                <a href="/user/<%= user._id %>" class="content-friend-link">
                  <img
                    src="<%= user.avatar %>"
                    alt=""
                  />
                  <p><%= user.fullname %></p>
                </a>
              </li>
            <%}) %>
          </ul>
        </div>
      </div>
    </div>
    <%- include('./modalPost') %>
  </body>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
    integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"
  ></script>
  <script src="/public/js/home.js"></script>
</html>
